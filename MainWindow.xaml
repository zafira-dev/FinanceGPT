<Window x:Class="FinanceGPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinanceGPT - AI Personal Finance Assistant" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#f7fafc">

    <Grid>
        <!-- Main Container -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar - Dark Gradient -->
            <Border Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2d3748" Offset="0"/>
                        <GradientStop Color="#1a202c" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!-- Logo -->
                    <Border Padding="30,30,30,20" Background="Transparent">
                        <StackPanel>
                            <TextBlock Text="FinanceGPT" FontSize="24" FontWeight="Bold" Foreground="#667eea"/>
                            <TextBlock Text="AI Finance Assistant" FontSize="12" Foreground="#a0aec0" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation -->
                    <StackPanel Margin="0,20,0,0">
                        <!-- Dashboard -->
                        <Border Background="#4a5568" BorderThickness="4,0,0,0" BorderBrush="#667eea" 
                                Margin="0,0,0,5" Padding="15" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Dashboard" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <!-- Other Menu Items -->
                        <Border Padding="30,15" Cursor="Hand" Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Transactions" Foreground="#cbd5e0"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="30,15" Cursor="Hand" Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Budgets" Foreground="#cbd5e0"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="30,15" Cursor="Hand" Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎯" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Goals" Foreground="#cbd5e0"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="30,15" Cursor="Hand" Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🤖" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="AI Insights" Foreground="#cbd5e0"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="30,15" Cursor="Hand" Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Settings" Foreground="#cbd5e0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1" Background="#f7fafc" Padding="30">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Header -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#2d3748"/>
                                <TextBlock Text="Welcome back! Here's your financial overview" 
                                          FontSize="14" Foreground="#718096" Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Buttons -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Export Report" 
                                        Background="White" Foreground="#667eea" 
                                        BorderBrush="#667eea" BorderThickness="2"
                                        Padding="12,8" Margin="0,0,10,0"
                                        FontWeight="SemiBold" Cursor="Hand"/>
                                <Button x:Name="AddTransactionButton" Content="+ Add Transaction" 
        Click="AddTransactionButton_Click"
        Foreground="White"
        Padding="15,10" FontWeight="SemiBold"
        Cursor="Hand">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#667eea" Offset="0"/>
                                            <GradientStop Color="#764ba2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Stats Grid -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Balance Card -->
                            <Border Grid.Column="0" Background="White" Margin="5" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total Balance" FontSize="14" 
                                                  Foreground="#718096" FontWeight="Normal"/>
                                        <Border Grid.Column="1" Background="#e6fffa" 
                                                Width="40" Height="40" CornerRadius="10">
                                            <TextBlock Text="💰" FontSize="20" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock x:Name="TotalBalanceText" Text="£4,532.00" FontSize="32" 
                                              FontWeight="Bold" Foreground="#2d3748"/>
                                    <TextBlock x:Name="BalanceTrendText" Text="↑ 12% from last month" FontSize="13" 
                                              Foreground="#48bb78" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Monthly Spending Card -->
                            <Border Grid.Column="1" Background="White" Margin="5" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Monthly Spending" FontSize="14" 
                                                  Foreground="#718096" FontWeight="Normal"/>
                                        <Border Grid.Column="1" Background="#fed7d7" 
                                                Width="40" Height="40" CornerRadius="10">
                                            <TextBlock Text="📉" FontSize="20" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock x:Name="MonthlySpendingText" Text="£1,234.50" FontSize="32" 
                                              FontWeight="Bold" Foreground="#2d3748"/>
                                    <TextBlock Text="↓ 8% from last month" FontSize="13" 
                                              Foreground="#f56565" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Monthly Income Card -->
                            <Border Grid.Column="2" Background="White" Margin="5" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Monthly Income" FontSize="14" 
                                                  Foreground="#718096" FontWeight="Normal"/>
                                        <Border Grid.Column="1" Background="#c6f6d5" 
                                                Width="40" Height="40" CornerRadius="10">
                                            <TextBlock Text="📈" FontSize="20" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock x:Name="MonthlyIncomeText" Text="£3,200.00" FontSize="32" 
                                              FontWeight="Bold" Foreground="#2d3748"/>
                                    <TextBlock Text="↑ 5% from last month" FontSize="13" 
                                              Foreground="#48bb78" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Savings Rate Card -->
                            <Border Grid.Column="3" Background="White" Margin="5" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Savings Rate" FontSize="14" 
                                                  Foreground="#718096" FontWeight="Normal"/>
                                        <Border Grid.Column="1" Background="#feebc8" 
                                                Width="40" Height="40" CornerRadius="10">
                                            <TextBlock Text="🎯" FontSize="20" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock x:Name="SavingsRateText" Text="61%" FontSize="32" 
                                              FontWeight="Bold" Foreground="#2d3748"/>
                                    <TextBlock Text="↑ 3% from last month" FontSize="13" 
                                              Foreground="#48bb78" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- AI Insight Card -->
                        <Border Margin="0,0,0,30" Padding="20" CornerRadius="15">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#667eea" Offset="0"/>
                                    <GradientStop Color="#764ba2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel>
                                <TextBlock Text="🤖 AI Insight" FontSize="16" 
                                          Foreground="White" FontWeight="Bold" 
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="AIInsightText" Text="You're spending 42% more on dining out compared to last month. Consider meal prepping to save approximately £180/month. Your coffee purchases alone account for £89 this month." 
                                          FontSize="14" Foreground="White" 
                                          TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <!-- Charts Section -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Spending Trend Chart -->
                            <Border Grid.Column="0" Background="White" Margin="0,0,10,0" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <TextBlock Text="Spending Trend" FontSize="18" 
                                              FontWeight="SemiBold" Foreground="#2d3748" 
                                              Margin="0,0,0,20"/>
                                    <Border Background="#f7fafc" Height="200" 
                                            CornerRadius="10" BorderThickness="1" 
                                            BorderBrush="#e2e8f0">
                                        <TextBlock Text="[Chart: Monthly Spending Trends]" 
                                                  Foreground="#718096" FontSize="14" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Category Breakdown -->
                            <Border Grid.Column="1" Background="White" Margin="10,0,0,0" 
                                    Padding="25" CornerRadius="15">
                                <StackPanel>
                                    <TextBlock Text="Category Breakdown" FontSize="18" 
                                              FontWeight="SemiBold" Foreground="#2d3748" 
                                              Margin="0,0,0,20"/>
                                    <Border Background="#f7fafc" Height="200" 
                                            CornerRadius="10" BorderThickness="1" 
                                            BorderBrush="#e2e8f0">
                                        <TextBlock Text="[Chart: Spending by Category]" 
                                                  Foreground="#718096" FontSize="14" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- AI Chat Section -->
                        <Border Background="White" Margin="0,0,0,30" 
                                Padding="25" CornerRadius="15">
                            <StackPanel>
                                <!-- AI Header -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ask AI About Your Finances" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              Foreground="#2d3748"/>
                                    <Border Grid.Column="1" Padding="5,12" CornerRadius="20">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#667eea" Offset="0"/>
                                                <GradientStop Color="#764ba2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="Powered by Ollama" 
                                                  FontSize="12" FontWeight="SemiBold" 
                                                  Foreground="White"/>
                                    </Border>
                                </Grid>

                                <!-- Chat Messages -->
                                <Border Background="#f7fafc" Height="150" 
                                        CornerRadius="10" BorderThickness="1" 
                                        BorderBrush="#e2e8f0" Padding="15" 
                                        Margin="0,0,0,15">
                                    <ScrollViewer x:Name="ChatMessagesScroll">
                                        <StackPanel x:Name="ChatMessages">
                                            <!-- User Message -->
                                            <Border Background="#edf2f7" Padding="12,16" 
                                                    CornerRadius="12" Margin="0,0,0,10" 
                                                    HorizontalAlignment="Right" 
                                                    MaxWidth="400">
                                                <TextBlock Text="How much did I spend on coffee last month?" 
                                                          FontSize="14" TextWrapping="Wrap"/>
                                            </Border>

                                            <!-- AI Message -->
                                            <Border Background="#f0f4ff" Padding="12,16" 
                                                    CornerRadius="12" BorderThickness="1" 
                                                    BorderBrush="#667eea" MaxWidth="400">
                                                <TextBlock Text="Based on your transactions, you spent £89 on coffee last month. This is 23% higher than your average. Your most frequent purchase was at Starbucks (12 times), followed by Costa (8 times)." 
                                                          FontSize="14" TextWrapping="Wrap"/>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>

                                <!-- Chat Input -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ChatInput" 
                                             Text="Ask anything about your finances..." 
                                             Padding="12,16" FontSize="14" 
                                             BorderThickness="2" BorderBrush="#e2e8f0" 
                                             Margin="0,0,10,0"/>
                                    <Button x:Name="SendChatButton" Content="Send" 
                                            Foreground="White" 
                                            Padding="20,12" FontWeight="SemiBold" 
                                             Cursor="Hand">
                                        <Button.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#667eea" Offset="0"/>
                                                <GradientStop Color="#764ba2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Recent Transactions -->
                        <Border Background="White" Padding="25" CornerRadius="15">
                            <StackPanel>
                                <TextBlock Text="Recent Transactions" FontSize="18" 
                                          FontWeight="SemiBold" Foreground="#2d3748" 
                                          Margin="0,0,0,20"/>

                                <StackPanel x:Name="TransactionsPanel">
                                    <!-- Transactions will be loaded here from database -->
                                    <TextBlock Text="Loading transactions from database..." 
                                              Foreground="#718096" FontSize="14" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="0,20,0,20"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>
</Window>