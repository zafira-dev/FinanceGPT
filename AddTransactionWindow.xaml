<Window x:Class="FinanceGPT.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Transaction" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f7fafc"
        ResizeMode="NoResize">

    <Grid>
        <!-- Header with Gradient -->
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" Margin="40,0">
                <TextBlock Text="Add New Transaction" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Record your income or expense" 
                          FontSize="14" Foreground="#e6e6ff" 
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form Section -->
        <Border Grid.Row="1" Margin="40,30,40,40">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Transaction Type Toggle -->
                    <TextBlock Text="Transaction Type" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="IncomeButton" Content="💰 Income" 
                                Grid.Column="0" Padding="0,15" 
                                FontSize="16" FontWeight="SemiBold"
                                Margin="0,0,5,0" Cursor="Hand"
                                Background="#c6f6d5" Foreground="#22543d"
                                BorderThickness="2" BorderBrush="#48bb78"
                                Click="IncomeButton_Click"/>
                        
                        <Button x:Name="ExpenseButton" Content="💳 Expense" 
                                Grid.Column="1" Padding="0,15" 
                                FontSize="16" FontWeight="SemiBold"
                                Margin="5,0,0,0" Cursor="Hand"
                                Background="White" Foreground="#718096"
                                BorderThickness="2" BorderBrush="#e2e8f0"
                                Click="ExpenseButton_Click"/>
                    </Grid>

                    <!-- Amount -->
                    <TextBlock Text="Amount (£)" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <TextBox x:Name="AmountTextBox" 
                            FontSize="24" FontWeight="Bold"
                            Padding="15" Height="60"
                            BorderThickness="2" BorderBrush="#e2e8f0"
                            Margin="0,0,0,25"
                            Text="0.00"/>

                    <!-- Description -->
                    <TextBlock Text="Description" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <TextBox x:Name="DescriptionTextBox" 
                            FontSize="14" Padding="15"
                            BorderThickness="2" BorderBrush="#e2e8f0"
                            Margin="0,0,0,25"
                            Text="Enter description..."/>

                    <!-- Category -->
                    <TextBlock Text="Category" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <ComboBox x:Name="CategoryComboBox" 
                             FontSize="14" Padding="15,12"
                             BorderThickness="2" BorderBrush="#e2e8f0"
                             Margin="0,0,0,25"
                             DisplayMemberPath="DisplayText"
                             SelectedValuePath="CategoryID"/>

                    <!-- Date -->
                    <TextBlock Text="Date" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <DatePicker x:Name="TransactionDatePicker" 
                               FontSize="14" Padding="15,12"
                               BorderThickness="2" BorderBrush="#e2e8f0"
                               Margin="0,0,0,25"/>

                    <!-- Notes (Optional) -->
                    <TextBlock Text="Notes (Optional)" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2d3748" Margin="0,0,0,10"/>
                    <TextBox x:Name="NotesTextBox" 
                            FontSize="14" Padding="15"
                            Height="80" TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            BorderThickness="2" BorderBrush="#e2e8f0"
                            Margin="0,0,0,25"
                            Text="Add any additional notes..."/>

                    <!-- Action Buttons -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CancelButton" Content="Cancel" 
                                Grid.Column="0" Padding="0,15" 
                                FontSize="16" FontWeight="SemiBold"
                                Margin="0,0,5,0" Cursor="Hand"
                                Background="White" Foreground="#718096"
                                BorderThickness="2" BorderBrush="#e2e8f0"
                                Click="CancelButton_Click"/>

                        <Button x:Name="SaveButton" Content="Save Transaction" 
                                Grid.Column="1" Padding="0,15" 
                                FontSize="16" FontWeight="SemiBold"
                                Margin="5,0,0,0" Cursor="Hand"
                                Foreground="White"
                                Click="SaveButton_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#667eea" Offset="0"/>
                                    <GradientStop Color="#764ba2" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>